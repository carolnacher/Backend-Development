<h1><%= title %></h1>
<%- messages() %>
<% if (typeof errors !== 'undefined' && errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>



<p>You're logged in</p>




<% if (account.account_type === "Client") { %>
  <h2 class="welcome-client">Welcome <%= account.account_firstname %></h2>
  <a class="update-link" href="/account/update/<%= account.account_id %>">Update account information</a>
<% } else if (account.account_type === "Employee" || account.account_type === "Admin") { %>
  <h2 class="welcome-admin">Welcome <%= account.account_firstname %></h2>

  <a class="update-link" href="/account/update/<%= account.account_id %>">Update account information</a>

  <h3 class="management-title">Inventory Management</h3>
  <p><a class="management-link" href="/inv">Go to inventory management</a></p>
<% } %>

<% if (account.account_type === "Client") { %>
  <a class="update-link" href="/account/update/<%= account.account_id %>">Update account information</a>
<% } %>